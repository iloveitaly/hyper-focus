#!/bin/bash

if [[ -z $1 ]]; then
	echo "No version specified"
	exit 1
fi

new_version=$1
file_with_version=Sources/hyper-focus/command.swift
existing_version=$(sed -n 's/.*"v\([0-9]*\.[0-9]*\.[0-9]*\)".*/\1/p' $file_with_version)
sed -i "" "s/${existing_version}/${new_version}/" "${file_with_version}"
